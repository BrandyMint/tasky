= simple_form_for board, remote: true, data: { type: :html } do |f|
  .modal-header
    h5#modalTitle.modal-title
      = t '.title'
    = render 'modal_close_button'

  .modal-body
      = f.error_notification
      = f.input :title, autofocus: true, input_html: { autocomplete: :off }

      = render 'extra', board: board

  .modal-footer
    = render 'board_archive', board: board
    = f.button :submit, class: 'btn-primary', data: { enableWhenChanged: true }, data: { disable_with: t('helpers.disable_with') }
